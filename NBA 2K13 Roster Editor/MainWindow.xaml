<Window x:Class="NBA_2K13_Roster_Editor.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:NBA_2K13_Roster_Editor="clr-namespace:NBA_2K13_Roster_Editor" Title="NBA 2K13 Roster Editor" Height="477"
        Width="902" Closing="Window_Closing_1" Icon="pack://siteoforigin:,,,/NLSC.ico">
    <Window.Resources>
        <ObjectDataProvider x:Key="SignatureSkillsList" MethodName="GetValues"
                            ObjectType="{x:Type NBA_2K13_Roster_Editor:SignatureSkills}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="NBA_2K13_Roster_Editor:SignatureSkills" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Button x:Name="btnOpen" Content="Open" Margin="0,10,10,0" HorizontalAlignment="Right" Width="75" Height="22"
                VerticalAlignment="Top" Click="btnOpen_Click" />
        <TextBox x:Name="txtFile" Height="23" Margin="10,10,116,0" Text="" VerticalAlignment="Top" IsReadOnly="True"
                 MaxLines="1" />
        <CheckBox x:Name="chkRecalculateCRC" Content="Recalculate CRC on Save" Margin="0,42,10,0"
                  VerticalAlignment="Top" Checked="chkRecalculateCRC_Checked" Unchecked="chkRecalculateCRC_Unchecked"
                  HorizontalAlignment="Right" Width="148" />
        <TabControl Margin="10,42,116,30">
            <TabItem Header="Player">
                <Grid>
                    <GroupBox Header="Player" HorizontalAlignment="Left" Margin="8,11,0,0" VerticalAlignment="Top"
                              Height="136" Width="397">
                        <Grid>
                            <TextBox x:Name="txtPlayerID" HorizontalAlignment="Left" Height="23" Margin="47,10,0,0"
                                     TextWrapping="Wrap" VerticalAlignment="Top" Width="104" />
                            <Button x:Name="btnRefresh" Content="Search by ID" Margin="0,0,10,81"
                                    HorizontalAlignment="Right" Width="89" Height="22" VerticalAlignment="Bottom" Click="btnRefresh_Click" />
                            <Button x:Name="btnNextPlayer" Content="&gt;" HorizontalAlignment="Left"
                                    Margin="156,11,0,0" VerticalAlignment="Top" Width="32" Click="btnNextPlayer_Click" />
                            <Button x:Name="btnPrevPlayer" Content="&lt;" HorizontalAlignment="Left" Margin="10,10,0,0"
                                    VerticalAlignment="Top" Width="32" Click="btnPrevPlayer_Click" />
                            <Label x:Name="lblPlayerName" Content="" HorizontalAlignment="Left" Margin="10,38,0,0"
                                   VerticalAlignment="Top" />
                            <Label x:Name="lblOffset" Content="" HorizontalAlignment="Left" Margin="10,64,0,0"
                                   VerticalAlignment="Top" />
                            <Button x:Name="btnSave" Content="Save Player" Margin="0,0,10,10"
                                    VerticalAlignment="Bottom" Click="btnSave_Click" HorizontalAlignment="Right" Width="89" />
                            <Button x:Name="btnSearchByCF" Content="Search by CF" HorizontalAlignment="Right"
                                    Margin="0,38,10,0" VerticalAlignment="Top" Width="89" Click="btnSearchByCF_Click" />
                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Signature Skills" HorizontalAlignment="Left" Margin="8,152,0,0"
                              VerticalAlignment="Top" Height="179" Width="176">
                        <Grid>
                            <ComboBox x:Name="cmbSS1"
                                      ItemsSource="{Binding Source={StaticResource SignatureSkillsList}}" Width="143" VerticalAlignment="Top"
                                      HorizontalAlignment="Left" Margin="10,10,0,0" />
                            <ComboBox x:Name="cmbSS2"
                                      ItemsSource="{Binding Source={StaticResource SignatureSkillsList}}" Width="143" VerticalAlignment="Top"
                                      HorizontalAlignment="Left" Margin="10,37,0,0" />
                            <ComboBox x:Name="cmbSS3"
                                      ItemsSource="{Binding Source={StaticResource SignatureSkillsList}}" Width="143" VerticalAlignment="Top"
                                      HorizontalAlignment="Left" Margin="10,64,0,0" />
                            <ComboBox x:Name="cmbSS4"
                                      ItemsSource="{Binding Source={StaticResource SignatureSkillsList}}" Width="143" VerticalAlignment="Top"
                                      HorizontalAlignment="Left" Margin="10,91,0,0" />
                            <ComboBox x:Name="cmbSS5"
                                      ItemsSource="{Binding Source={StaticResource SignatureSkillsList}}" Width="143" VerticalAlignment="Top"
                                      HorizontalAlignment="Left" Margin="10,118,0,0" />

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Parameters" HorizontalAlignment="Left" Margin="190,152,0,0"
                              VerticalAlignment="Top" Height="170" Width="215">
                        <Grid>
                            <TextBox x:Name="txtCFID" HorizontalAlignment="Left" Height="23" Margin="79,10,0,0"
                                     TextWrapping="Wrap" VerticalAlignment="Top" Width="114" />
                            <CheckBox x:Name="chkGenericF" Content="GenericF" HorizontalAlignment="Left"
                                      Margin="130,38,0,0" VerticalAlignment="Top" />
                            <Label Content="CF ID" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" />
                            <TextBox x:Name="txtPortraitID" HorizontalAlignment="Left" Height="23" Margin="79,59,0,0"
                                     TextWrapping="Wrap" VerticalAlignment="Top" Width="114" />
                            <Label Content="Portrait ID" HorizontalAlignment="Left" Margin="10,56,0,0"
                                   VerticalAlignment="Top" />
                            <TextBox x:Name="txtPlType" HorizontalAlignment="Left" Height="23" Margin="79,87,0,0"
                                     TextWrapping="Wrap" VerticalAlignment="Top" Width="114" />
                            <Label Content="PlType" HorizontalAlignment="Left" Margin="10,84,0,0"
                                   VerticalAlignment="Top" />
                            <Label Content="(2 for Regular, 6 for CAP)" HorizontalAlignment="Left" Margin="51,110,0,0"
                                   VerticalAlignment="Top" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Team Roster">
                <Grid>
                    <Button x:Name="btnSaveTest" Content="Save" Margin="0,10,10,0" HorizontalAlignment="Right"
                            Width="75" Height="22" VerticalAlignment="Top" Click="btnSaveTest_Click" />
                    <Button x:Name="btnFill" Content="Fill with consecutive" Margin="0,37,10,0"
                            HorizontalAlignment="Right" Width="133" Height="22" VerticalAlignment="Top" Click="btnFill_Click" />
                    <DataGrid x:Name="dgRosters" ItemsSource="{Binding .}" Margin="10,10,157,10"
                              CanUserReorderColumns="False" CanUserSortColumns="False" SelectionUnit="Cell" PreviewKeyDown="dgRosters_PreviewKeyDown"
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" EnableColumnVirtualization="True"
                              ScrollViewer.IsDeferredScrollingEnabled="False" EnableRowVirtualization="True" />
                    <Button x:Name="btnFix" Content="Fix PlNum &amp; Order" HorizontalAlignment="Right"
                            Margin="0,64,10,0" VerticalAlignment="Top" Width="133" Click="btnFix_Click" />
                </Grid>
            </TabItem>
            <TabItem Header="Options">
                <Grid>
                    <GroupBox Header="First Signature Skills Offset" HorizontalAlignment="Left" VerticalAlignment="Top"
                              Height="135" Width="176" Margin="10,10,0,0">
                        <Grid>
                            <TextBox x:Name="txtFirstSSOffset" HorizontalAlignment="Left" Height="23"
                                     Margin="48,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" />
                            <Button x:Name="btnSaveOffsets" Content="Save" Margin="0,0,10,9"
                                    Click="btnSaveOffsets_Click" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" />
                            <TextBox x:Name="txtFirstSSOffsetBit" HorizontalAlignment="Left" Height="23"
                                     Margin="48,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" />
                            <Label Content="Byte" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
                            <Label Content="Bit" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" />
                        </Grid>

                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        <GroupBox Header="Mode" Margin="0,69,10,0" VerticalAlignment="Top" Height="82" HorizontalAlignment="Right"
                  Width="91">
            <Grid>
                <RadioButton x:Name="btnModePC" Content="PC" HorizontalAlignment="Left" Margin="10,10,0,0"
                             VerticalAlignment="Top" Checked="btnModePC_Checked" />
                <RadioButton x:Name="btnMode360" Content="360" HorizontalAlignment="Left" Margin="10,31,0,0"
                             VerticalAlignment="Top" Checked="btnMode360_Checked" />
            </Grid>
        </GroupBox>
        <StatusBar HorizontalAlignment="Stretch" Height="25" Margin="0" VerticalAlignment="Bottom" >
            <TextBlock Margin="2" Name="txbStatus" Text="Ready" />
        </StatusBar>

    </Grid>
</Window>